<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Submission</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
        <tr>
        <td><%= comment.text %>></td>
        <td><%= comment.userId %>></td>

        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment? This action is irreversible'} %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Comment', new_comment_path %>
