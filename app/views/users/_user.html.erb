<thead>
<table id="hnmain" border="0" cellpadding="0" align="center" cellspacing="0" width="85%" bgcolor="#f6f6ef">
  <thead>
    <tr>
      <td bgcolor="#ff6600">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" >
          <tbody>
          <tr>
            <td style="width:18px;padding-right:4px">
              <a href=http://www.ycombinator.com/>
                <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid;">
              </a>
            </td>
            <td style="line-height:12pt; height:10px;">
              <span class="pagetop"><b class="=hname"><%= link_to 'Hacker News', microposts_url %></b></span>
              <span class="pagetop"><%= link_to 'new', microposts_url(:sort =>"date") %></span>
              | <span class="pagetop"><%= link_to 'ask', microposts_url(:type =>"ask") %></span>
              | <span class="pagetop"><%= link_to 'submit', new_micropost_url %></span>
            </td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="label_user">
        user: <span class="value_user"><%= user.name %></span>
      </td>
    </tr>
    <tr>
      <td class="label">
        created: <span style="color: black"><%= user.created_at.strftime('%B %-d, %Y') %></span>
      </td>
    </tr>
    <tr>
      <td class="label">
        karma: <span class="value_karma"><%= user.karma %></span>
      </td>
    </tr>
    <tr>
      <td class="label">
        about: <span class="value_about"><%= user.about %></span>
      </td>
    </tr>
    <tr>
      <td class="link_stories">
        <a href="/contributions?user=<%= @user.id %>">
          <span class="link_stories">submissions</span>
        </a>
      </td>
    </tr>
    <tr>
      <td class="link_comments">
        <a href="/users/<%= @user.id %>/comments">
          <span class="link_comments">comments</span>
        </a>
      </td>
    </tr>
  <span class="peu_user"><tr><td class="peu_user">.</td></tr><tr><td class="peu_user">.</td></tr></span>
  </tbody>
</table>
